{
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "root": true,
  "env": {
    "node": true,
    "es2022": true,
    "jest": true
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "prefer-const": "error",
    "no-var": "error"
  },
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    "*.js",
    "*.mjs",
    "jest.config.cjs",
    "coverage/**"
  ],
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.test.js", "tests/**/*"],
      "rules": {
        "no-console": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    },
    {
      "files": ["*.js", "*.mjs"],
      "parser": "espree",
      "rules": {
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
}